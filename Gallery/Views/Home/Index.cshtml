@{
    ViewBag.Title = "Home Page";
}

    <div class="container">

        <!-- Full-width images with number text -->
        @for (int i = 0; i < ViewBag.Photoes.Count; i++)
        {
            <div class="mySlides">
                <div class="numbertext">@(i+1) / @ViewBag.Photoes.Count</div>
                <img src="@ViewBag.Photoes[i].Path" style="width:100%">
            </div>
        }

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>

        <!-- Image text -->
        <div class="caption-container">
            <p id="caption"></p>
        </div>

        <!-- Thumbnail images -->
        <div class="row">
            @for (int j = 0; j < ViewBag.Photoes.Count; j++)
            {
                <div class="column" style="width:@(100/(int)ViewBag.Photoes.Count)%">
                    <img class="demo cursor" src="@ViewBag.Photoes[j].Path" style="width:100%" onclick="currentSlide(@(j+1))" alt="@ViewBag.Photoes[j].Name">
                </div>
            }
        </div>
    </div>
    